<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  </head>

<body>

<div id="header">
<%= render 'layouts/header' %>
</div>

<div class="colmask threecol">
	<div class="colmid">
		<div class="colleft">

			<div class="col1">
				<h1><%= @header %></h1>
        <%= yield %>
				<!-- Column 1 end -->
			</div>

			<div class="col2">
				<!-- Column 2 start -->
		    <%= render 'layouts/menu' %>
		    <!-- Column 2 end -->
			</div>
			
      <div class="col3">
				<!-- Column 3 start -->
        <%= render 'layouts/picture' %>
				<!-- Column 3 end -->
			</div>
		</div>
	</div>
</div>
<div id="footer">
<%= render 'layouts/footer' %>
</div>

</body>
</html>
